<div class="tabs">
  <ul>
    <li id="conclusions"><%= link_to "Conclusions", project_conclusions_path(@project, @experiment) %></li>
    <li id="results"><%= link_to "Results", project_results_path(@project, @experiment) %></li>
    <li id="observations"><%= link_to "Observations", project_observations_path(@project, @experiment) %></li>
    <li id="procedures"><%= link_to "Procedures", project_procedures_path(@project, @experiment) %></li>
    <li id="summary" class="active"><%= link_to "Summary", project_experiment_path(@project, @experiment) %></li>
  </ul>
</div>

<p class="title"><%= @experiment.name %></p>
<div id="experiment_content">
  <p>Author: <%= link_to @experiment.experimenter.full_name, user_path(@experiment.experimenter) %><p>
  <p>In Response to Proposal: <%= link_to @experiment.project.name, project_path(@experiment.project) %></p>
  <p>Date: <%= @experiment.created_at.strftime("%A, %d %b %Y") %></p>

  <p class="titlesmall">Comments</p>

  <% @experiment.comments.each do |comment| %>
    <p class="commentbody"><%= comment.content %>
      <span class="fineprint">--<%= link_to comment.commenter.full_name, user_path(comment.commenter) %>
      <%= comment.created_at.strftime(", %A, %d %b %Y %l:%M %p") %></span>
    </p>
  <% end %>

  <%= render "comment_button" %>
</div>
