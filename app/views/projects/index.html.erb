<p class="title">Projects</p>

<% @projects.each do |project| %>
  <div class="listing">
    <p><%= link_to project.name, project_path(project) %></p>
    <p>Author: <%= link_to project.creator.full_name, user_path(project.creator) %>
    <p class="fineprint"><%= project.experiments.count %> experiments posted</p>
  </div>
<% end %>
